(jbuild_version 1)
(library (
          (name mqtt_lwt)
          (public_name mqtt_lwt)
          (modules mqtt_lwt)
          (libraries (core
                       lwt
                       cmdliner
                       logs fmt
                       lwt.unix
                       logs.fmt
                       logs.cli
                       logs.lwt
                       fmt.cli
                       fmt.tty
                       unix))
          (preprocess (pps (lwt_ppx ppx_let ppx_jane)))
          ))
(executable (
             (name mqtt_client)
             (modules mqtt_client)
             (libraries (core
                          lwt
                          tls
                          tls.lwt
                          x509
                          cmdliner
                          logs fmt
                          lwt.unix
                          logs.fmt
                          logs.lwt
                          logs.cli
                          fmt.cli
                          fmt.tty
                          unix
                          mqtt_lwt))
             (preprocess (pps (lwt_ppx ppx_let ppx_jane)))
             ))
